<div class="container">
    <div class="row">
        <form action="/register/new" method="POST" role="form">
            <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                <input id="usernameRegister" name="usernameRegister" type="text">
                <label for="usernameRegister">Username</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">lock_outline</i>
                <input id="passwordRegister" name="passwordRegister" type="password">
                <label for="passwordRegister">Password</label>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">mail_outline</i>
                <input id="emailRegister" name="emailRegister" type="email">
                <label for="emailRegister">E-Mail</label>
            </div>
            <button class="waves-effect waves-green btn-flat" id="registrationSubmit">Submit</button>
        </form>
    </div>
</div>